# EditorConfig helps maintain consistent coding styles across different editors
# See https://editorconfig.org for more information

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Allow trailing spaces for line breaks

# YAML files (frontmatter, configs)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Obsidian Base files
[*.base]
indent_style = space
indent_size = 2
